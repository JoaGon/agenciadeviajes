extends ../layout/index
block contenido
    main.container.mt-5
            h1.text-center.mb-5 #{pagina}


            .row

                .col-md-12 
                    blockquote.text-center Lee Sobre nuestros Clientes y sus experiencias
                    .row.testimoniales
                        each testimonial in testimoniales
                            .col-md-6.col-lg-4.mb-4 
                                .card
                                    .card-body
                                        blockquote.blockquote
                                        p.mb-0
                                            | #{testimonial.mensaje}
                                        footer.blockquote-footer
                                            | #{testimonial.nombre}
                .col-md-12
                    h2.text-center Agrega un Testimonial
                    if(errores)
                        each error in errores
                            .alert.alert-danger.trext-center=error.mensaje

                    .row.justify-content-center
                        .col-md-8
                            form(action="/testimoniales", method="POST")
                                .form-group
                                    label(for="") Nombre
                                    input(id="name", class="form-control" type="text", placeholder="Tu nombre", name="name", value=name)
                                .form-group
                                    label(for="") Correo electrónico
                                    input(id="email", class="form-control" type="email", placeholder="Tu correo electrónico", name="correo", value=correo)
                                .form-group
                                    label(for="mensaje") Mensaje
                                    textarea#mensaje(name="mensaje",n placeholder="Tu mensaje", class="form-control" rows="3")=mensaje

                                input(type="submit", class="btn btn-success btn-block", value="Agregar")

                